<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.ui.vm.BodyTemplateViewModel">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" prefHeight="780.0" prefWidth="1180.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Body Template Management" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="addButton" text="Add Template" onAction="#handleAddTemplate" />
                        <Button fx:id="updateButton" text="Update Template" onAction="#handleUpdateTemplate" />
                        <Button fx:id="deleteButton" text="Delete Template" onAction="#handleDeleteTemplate" />
                        <Button fx:id="clearButton" text="Clear Form" onAction="#handleClearForm" />
                    </children>
                </HBox>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Template Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="templateNameField" promptText="Template Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Body Content:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextArea fx:id="bodyContentArea" promptText="Body Template Content" prefRowCount="6" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
                <TableView fx:id="templateTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Template Name" />
                        <TableColumn fx:id="contentColumn" prefWidth="800.0" text="Body Content" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane> 