<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.ui.vm.GatlingTestViewModel">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" prefHeight="780.0" prefWidth="1180.0" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <!-- Form Section -->
                <ScrollPane fitToWidth="true" prefHeight="400.0">
                    <content>
                        <VBox spacing="20.0">
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                            <children>
                                <!-- Basic Information Section -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label text="Basic Information" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
                                        <Separator />
                                        
                                        <!-- First Row: Is Run, Test Suite, Test Case ID, Tags, Wait Time -->
                                        <HBox spacing="15.0" alignment="CENTER_LEFT">
                                            <children>
                                                <VBox spacing="5.0" minWidth="50.0" maxWidth="50.0">
                                                    <children>
                                                        <Label text="Is Run:" style="-fx-font-weight: bold;" />
                                                        <CheckBox fx:id="isRunCheckBox" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" minWidth="300.0" maxWidth="300.0">
                                                    <children>
                                                        <Label text="Test Suite:" style="-fx-font-weight: bold;" />
                                                        <TextField fx:id="suiteField" promptText="Enter test suite name" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Test Case ID:" style="-fx-font-weight: bold;" />
                                                        <TextField fx:id="tcidField" promptText="Enter test case ID" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Tags:" style="-fx-font-weight: bold;" />
                                                        <FlowPane fx:id="tagsFlowPane" hgap="5" vgap="5" prefWidth="300.0">
                                                            <children>
                                                                <TextField fx:id="tagsInputField" promptText="Press Enter to add tag" onAction="#handleTagInput" prefWidth="120.0" />
                                                            </children>
                                                        </FlowPane>
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" minWidth="100.0" maxWidth="100.0">
                                                    <children>
                                                        <Label text="Wait Time (s):" style="-fx-font-weight: bold;" />
                                                        <Spinner fx:id="waitTimeSpinner" prefWidth="100.0" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                        
                                        <!-- Second Row: Test Conditions and Test Descriptions -->
                                        <HBox spacing="15.0" alignment="TOP_LEFT">
                                            <children>
                                                <VBox spacing="5.0" minWidth="365.0" maxWidth="350.0">
                                                    <children>
                                                        <Label text="Test Conditions:" style="-fx-font-weight: bold;" />
                                                        <TextArea fx:id="conditionsArea" promptText="Describe test prerequisites and environment requirements" prefRowCount="3" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Test Descriptions:" style="-fx-font-weight: bold;" />
                                                        <TextArea fx:id="descriptionsArea" promptText="Describe test purpose and expected behavior" prefRowCount="3" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                
                                <!-- API Configuration Section -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label text="API Configuration" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
                                        <Separator />
                                        
                                        <!-- HTTP Method and API Endpoint URL on same row -->
                                        <HBox spacing="15.0" alignment="CENTER_LEFT">
                                            <children>
                                                <VBox spacing="5.0" prefWidth="350.0">
                                                    <children>
                                                        <Label text="HTTP Method:" style="-fx-font-weight: bold;" />
                                                        <ComboBox fx:id="httpMethodComboBox" promptText="Select HTTP Method" prefWidth="350.0"/>
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Endpoint:" style="-fx-font-weight: bold;" />
                                                        <TextField fx:id="endpointField" promptText="Enter complete API endpoint URL" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                        
                                        <!-- Headers Configuration -->
                                        <HBox spacing="15.0" alignment="TOP_LEFT">
                                            <children>
                                                <VBox spacing="5.0" prefWidth="350.0">
                                                    <children>
                                                        <Label text="Headers Template:" style="-fx-font-weight: bold;" />
                                                        <ComboBox fx:id="headersTemplateComboBox" prefWidth="350.0" promptText="Select headers template" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Headers Dynamic Variables:" style="-fx-font-weight: bold;" />
                                                        <TableView fx:id="headersTemplateVarsTable" prefHeight="100.0">
                                            <columns>
                                                <TableColumn fx:id="headersTemplateKeyColumn" prefWidth="175.0" text="Variable Name" />
                                                <TableColumn fx:id="headersTemplateValueColumn" prefWidth="175.0" text="Variable Value" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                                    </children>
                                                </VBox>
                                    </children>
                                        </HBox>
                                        
                                        <!-- Body Configuration -->
                                        <HBox spacing="15.0" alignment="TOP_LEFT">
                                            <children>
                                                <VBox spacing="5.0" prefWidth="350.0">
                                                    <children>
                                                        <Label text="Body Template:" style="-fx-font-weight: bold;" />
                                                        <ComboBox fx:id="bodyTemplateComboBox" prefWidth="350.0" promptText="Select body template" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Body Dynamic Variables:" style="-fx-font-weight: bold;" />
                                                        <TableView fx:id="bodyDynamicVarsTable" prefHeight="100.0">
                                            <columns>
                                                                <TableColumn fx:id="bodyDynamicKeyColumn" prefWidth="175.0" text="Variable Name" />
                                                                <TableColumn fx:id="bodyDynamicValueColumn" prefWidth="175.0" text="Variable Value" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                
                                <!-- Response Configuration Section -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label text="Response Configuration" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
                                        <Separator />
                                        <!-- Expected Result and Save Fields -->
                                        <HBox spacing="15.0" alignment="TOP_LEFT">
                                            <children>
                                                <!-- Expected Status -->
                                                <VBox spacing="5.0">
                                                    <children>
                                                        <Label text="Expected Status:" style="-fx-font-weight: bold;" />
                                                        <ComboBox fx:id="expStatusComboBox" promptText="Select status code" prefWidth="150.0" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Expected Result:" style="-fx-font-weight: bold;" />
                                                        <TextArea fx:id="expResultArea" promptText="Describe expected response content or format" prefRowCount="4" />
                                                    </children>
                                                </VBox>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Save Fields:" style="-fx-font-weight: bold;" />
                                                        <TextArea fx:id="saveFieldsArea" promptText="Specify fields to save from response" prefRowCount="4" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                
                                <!-- Hidden field for ID -->
                                <TextField fx:id="testIdField" visible="false" managed="false" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
                
                <!-- Action Buttons Section -->
                <VBox spacing="10.0">
                    <children>
                        <Separator />
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddTest" text="Add Test" />
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdateTest" text="Update Test" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteTest" text="Delete Test" />
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClearFields" text="Clear Form" />
                        <Separator orientation="VERTICAL" />
                        <Button fx:id="runTestButton" mnemonicParsing="false" onAction="#handleRunTest" text="Run Selected Test" />
                                <Button fx:id="runSuiteButton" mnemonicParsing="false" onAction="#handleRunSuite" text="Run Test Suite" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </HBox>
                    </children>
                </VBox>
                
                <!-- Test Cases Table Section -->
                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Test Cases List" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
                        <TableView fx:id="testTable" prefHeight="300.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="isRunColumn" prefWidth="60.0" text="Run" />
                        <TableColumn fx:id="suiteColumn" prefWidth="120.0" text="Suite" />
                        <TableColumn fx:id="tcidColumn" prefWidth="120.0" text="TCID" />
                        <TableColumn fx:id="httpMethodColumn" prefWidth="120.0" text="Method" />
                        <TableColumn fx:id="endpointColumn" prefWidth="280.0" text="Endpoint" />
                        <TableColumn fx:id="headersTemplateNameColumn" prefWidth="120.0" text="Headers" />
                        <TableColumn fx:id="bodyTemplateNameColumn" prefWidth="120.0" text="Body" />
                        <TableColumn fx:id="tagsColumn" prefWidth="120.0" text="Tags" />
                        <TableColumn fx:id="waitTimeColumn" prefWidth="80.0" text="Wait(s)" />
                        <TableColumn fx:id="descriptionsColumn" prefWidth="200.0" text="Descriptions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>